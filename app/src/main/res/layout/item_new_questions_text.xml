<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    android:orientation="horizontal"
    app:cardCornerRadius="0dp"
    app:cardElevation="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_gravity="start"
            android:id="@+id/cb_item_text_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            app:layout_constraintStart_toEndOf="@+id/cb_item_text_select"
            app:layout_constraintBottom_toBottomOf="@+id/cb_item_text_select"
            app:layout_constraintTop_toTopOf="@+id/cb_item_text_select"
            android:layout_gravity="start"
            android:id="@+id/tv_question_text_number"
            android:textSize="18sp"
            android:text="1."
            android:layout_width="24dp"
            android:layout_height="24dp" />
        <TextView
            android:id="@+id/tv_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文本题"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/tv_question_text_number"
            app:layout_constraintTop_toTopOf="@id/tv_question_text_number" />

        <EditText
            android:gravity="start"
            app:layout_constraintTop_toTopOf="parent"
            android:hint="题目内容..."
            android:padding="8dp"
            android:textSize="14sp"
            android:id="@+id/et_question_text_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_text_title"
            android:layout_marginStart="10dp"
            android:background="@drawable/edit_background"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>