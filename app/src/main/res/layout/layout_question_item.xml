<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:layout_marginTop="6dp"
    android:orientation="horizontal">

    <ImageView

        android:id="@+id/iv_question_sub"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_sub"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/et_question_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_question_add"
        app:layout_constraintTop_toTopOf="@id/et_question_content" />

    <ImageView
        android:layout_marginStart="6dp"
        android:id="@+id/iv_question_add"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_add"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/et_question_content"
        app:layout_constraintStart_toEndOf="@id/iv_question_sub"
        app:layout_constraintTop_toTopOf="@id/et_question_content" />

    <TextView
        android:id="@+id/tv_question_number"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:text="1."
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_question_add"
        app:layout_constraintStart_toStartOf="@id/iv_question_add"
        app:layout_constraintEnd_toEndOf="@id/iv_question_add"
        app:layout_constraintTop_toTopOf="@id/iv_question_add" />

    <EditText
        android:id="@+id/et_question_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:background="@drawable/edit_background"
        android:padding="8dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_question_add"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>